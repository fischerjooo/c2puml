{
  "source_folders": ["./tests/test_files"],
  "project_name": "Test_Project",
  "output_dir": "./test_plantuml_output",
  "recursive": true,
  "include_depth": 2,
  "file_filters": {
    "include": [".*\\.c$", ".*\\.h$"],
    "exclude": [".*test.*", ".*temp.*"]
  },
  "element_filters": {
    "structs": {
      "include": ["^[A-Z].*"],
      "exclude": [".*_internal.*"]
    },
    "functions": {
      "include": ["^public_.*"],
      "exclude": [".*_private.*"]
    }
  },
  "transformations": {
    "file_selection": {
      "selected_files": [".*main\\.c$", ".*utils\\.c$"]
    },
    "rename": {
      "structs": {
        "old_name": "new_name"
      }
    },
    "add": {
      "structs": {
        "NewStruct": {
          "fields": [
            {"name": "field1", "type": "int"},
            {"name": "field2", "type": "char*"}
          ]
        }
      }
    },
    "remove": {
      "functions": ["deprecated_function"],
      "structs": ["unused_struct"]
    }
  }
}