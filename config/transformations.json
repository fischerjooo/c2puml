{
  "_description": "Transformation configuration - regex-based renaming and modifications",
  "transformations": {
    "structs": {
      "^old_(.*)": "new_\\1",
      "(.*)_struct$": "\\1_t",
      "^legacy_": "",
      "pump_(.*)_config": "\\1_cfg",
      "(.*)_data$": "\\1_info"
    },
    "enums": {
      "^old_(.*)_enum": "\\1_e",
      "(.*)_status": "\\1_state",
      "pump_(.*)_mode": "pump_\\1_state",
      "^legacy_(.*)": "\\1"
    },
    "functions": {
      "^legacy_(.*)": "modern_\\1",
      "(.*)_impl$": "\\1",
      "^internal_(.*)": "_\\1",
      "pump_(.*)_set": "pump_set_\\1",
      "(.*)_handler$": "\\1_callback"
    }
  }
}