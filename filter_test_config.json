{
  "file_filters": {
    "files": {
      "include": [
        ".*\\.c$",
        ".*\\.h$"
      ],
      "exclude": [
        ".*test.*"
      ]
    }
  },
  
  "element_filters": {
    "functions": {
      "exclude": [
        "^_.*",
        ".*_test.*"
      ]
    }
  },
  
  "transformations": {
    "structs": {
      "(.*)_struct$": "\\1_t"
    },
    "functions": {
      "^old_(.*)": "new_\\1"
    }
  },
  
  "additions": {
    "structs": [
      {
        "name": "test_config_t",
        "fields": [
          {
            "name": "enabled",
            "type": "bool"
          },
          {
            "name": "value", 
            "type": "int"
          }
        ]
      }
    ]
  }
}