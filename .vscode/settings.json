{
    "python.defaultInterpreterPath": "${env:PYTHONHOME}/python.exe",
    "python.terminal.activateEnvironment": true,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/output": false
    },
    "search.exclude": {
        "**/venv": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true
    },
    "files.associations": {
        "*.puml": "plantuml",
        "*.bat": "batchfile",
        "*.sh": "shellscript"
    },
    "emmet.includeLanguages": {
        "plantuml": "html"
    },
    "plantuml.server": "https://www.plantuml.com/plantuml",
    "plantuml.render": "PlantUMLServer",
    "terminal.integrated.env.windows": {
        "plantumlPath": "${env:USERPROFILE}\\.vscode\\extensions\\jebbs.plantuml-2.18.1\\plantuml.jar"
    },
    "terminal.integrated.env.linux": {
        "plantumlPath": "${env:HOME}/.vscode/extensions/jebbs.plantuml-2.18.1/plantuml.jar"
    },
    "terminal.integrated.env.osx": {
        "plantumlPath": "${env:HOME}/.vscode/extensions/jebbs.plantuml-2.18.1/plantuml.jar"
    }
}