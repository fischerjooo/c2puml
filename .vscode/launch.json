{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main (Full Workflow)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONHOME": "${env:PYTHONHOME}"
            },
            "args": [],
            "justMyCode": false
        },
        {
            "name": "Debug Parse Only",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONHOME": "${env:PYTHONHOME}"
            },
            "args": ["parse"],
            "justMyCode": false
        },
        {
            "name": "Debug Transform Only",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONHOME": "${env:PYTHONHOME}"
            },
            "args": ["transform"],
            "justMyCode": false
        },
        {
            "name": "Debug Generate Only",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONHOME": "${env:PYTHONHOME}"
            },
            "args": ["generate"],
            "justMyCode": false
        },
        {
            "name": "Debug with Custom Config",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONHOME": "${env:PYTHONHOME}"
            },
            "args": ["--config", "${input:configPath}"],
            "justMyCode": false
        },
        {
            "name": "Debug Workflow with Custom Config",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONHOME": "${env:PYTHONHOME}"
            },
            "args": ["${input:workflow}", "--config", "${input:configPath}"],
            "justMyCode": false
        },
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONHOME": "${env:PYTHONHOME}"
            },
            "args": [
                "tests/",
                "-v",
                "--tb=short"
            ],
            "justMyCode": false
        },
        {
            "name": "Debug Specific Test",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONHOME": "${env:PYTHONHOME}"
            },
            "args": [
                "${file}",
                "-v",
                "--tb=long"
            ],
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "configPath",
            "type": "promptString",
            "description": "Enter the path to your config file",
            "default": "./example/config.json"
        },
        {
            "id": "workflow",
            "type": "pickString",
            "description": "Select the workflow to run",
            "options": ["parse", "transform", "generate"],
            "default": "parse"
        }
    ]
}