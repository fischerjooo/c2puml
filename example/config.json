{
  "project_name": "example_project",
  "source_folders": [
    "example/source",
    "example/source"
  ],
  "output_dir": "./output",
  "model_output_path": "model.json",
  "recursive_search": true,
  "include_depth": 10,
  "file_filters": {
    "include": [],
    "exclude": []
  },

  "file_specific": {
    "sample.c": {
      "include_filter": [
        "^stdio\\.h$",
        "^stdlib\\.h$",
        "^string\\.h$",
        "^sample\\.h$",
        "^math_utils\\.h$",
        "^logger\\.h$",
        "^geometry\\.h$",
        "^config\\.h$"
      ],
      "include_depth": 3
    },
    "utils.c": {
      "include_filter": [
        "^math\\.h$",
        "^time\\.h$"
      ],
      "include_depth": 2
    },
    "complex.c": {
      "include_depth": 5
    }
  },
  "transformations": {
    "remove": {
      "structs": [],
      "functions": [],
      "macros": []
    },
    "rename": {
      "structs": {},
      "functions": {}
    }
  }
}
